<div id="wallet_modal" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content panel-success">
      <div class="modal-header panel-heading ">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title ">Tickets</h4>        
      </div>
      <%= form_tag users_path, method: :post, id: "form-wallet_modal" do %>
        <table class="table table-condensed">
          <tbody>
            <tr>
              <td>
                <%= image_tag('DD.png', height: "20px", title: "DrawDiscard") %>
              </td>
              <td>
              </td>
              <td>
              
              </td>
            </tr>
            <tr>
              <td>
                <span class="pull-rght"><%="$"+@user.wallet %></span>
              </td>
              <td>
              </td>
              <td>
              
              </td>
            </tr>
            <% @user.magic_accounts.each do |account| %>
              <tr>
                <td>
                  Account: <%= account.name %> <br>
                  MTGO: <%= account.wallet %> 
                </td>
                <td></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#form-wallet_modal').bootstrapValidator({
    feedbackIcons: {
      valid: 'glyphicon glyphicon-ok',
      invalid: 'glyphicon glyphicon-remove',
      validating: 'glyphicon glyphicon-refresh'
    },
    fields: {
      email: {
        validators: {
          notEmpty: {
            message: 'The email address is required and cannot be empty'
          },
          emailAddress: {
            message: 'The email address is not valid'
          }
        }
      },
      password: {
        validators: {
          notEmpty: {
            message: 'The password is required and cannot be empty'
          },
          stringLength: {
            min: 8,
            message: 'The password must have at least 8 characters'
          }
        }
      },
      password_confirmation: {
        validators: {
          notEmpty: {
            message: 'The password confirmation is required and cannot be empty'
          },
          stringLength: {
            min: 8,
            message: 'The password confirmation must have at least 8 characters'
          },
          identical: {
            field: 'password',
            message: "The password and the password confirmation must be the same"
          }
        }
      }
    }
  });
  $('#register_modal').on('shown.bs.modal', function () {
    $('#register-email').focus(); 
  })
});
</script>

